<% if @prev_best_answer_id.present? %>
  $('[data-answer-id=' + '<%= j @answer.id %>' + ']').remove()
  $('.best-answer').html('<%= j (render @answer) %>')
  $('[data-answer-id=' + '<%= j @prev_best_answer_id %>' + ']').remove()
  $('.answers').append('<%= j (render Answer.find(@prev_best_answer_id)) %>')
<% else %>
  $('[data-answer-id=' + '<%= j @answer.id %>' + ']').remove()
  $('.best-answer').html('<%= j (render @answer) %>')
<% end %>
